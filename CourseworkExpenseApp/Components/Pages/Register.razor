@page "/register"

@* Register Form *@
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-sm" style="width: 400px;">
        <div class="card-body p-4">
            <h3 class="text-center mb-4 fw-bold">REGISTER</h3>

            <!-- Username Field -->
            <div class="mb-8">
                <label for="username" class="form-label fw-bold">Username</label>
                <input type="text" id="username" class="form-control" placeholder="Enter your username">
            </div>

            <!-- Password Field -->
            <div class="mb-8">
                <label for="password" class="form-label fw-bold">Password</label>
                <input type="password" id="password" class="form-control" placeholder="Enter your password">
            </div>

            <!-- Currency Type Dropdown -->
            <div class="mb-8">
                <label for="currency" class="form-label fw-bold">Currency Type</label>
                <select id="currency" class="form-select">
                    <option selected disabled>Select Currency Type</option>
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                    <option value="GBP">GBP</option>
                    <option value="INR">INR</option>
                </select>
            </div>
            <!-- Submit Button -->
            <div class="d-flex justify-content-center align-items-center">
                <button type="submit" class="btn btn-primary fw-semibold px-7 py-3" style="background-color: #594AE2; border: none;">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
